{
    "env": {
      "browser": true,
      "es6": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": ["airbnb-base"],
    "rules": {
      "no-restricted-syntax": "off",
    "no-continue": "off",
    "default-case": "off",
    "no-nested-ternary": "off",
    "no-plusplus": "off",
    "class-methods-use-this": "off",
    "no-unused-vars": "off",
    "guard-for-in": "off",
    "no-restricted-globals": "off",
    "prefer-const": "off",
    "no-use-before-define": "off",
    "no-loop-func": "off",
    "no-useless-escape": "off",
    "no-underscore-dangle": "off",
    "prefer-rest-params": "off",
      "import/prefer-default-export": "off",
      "max-classes-per-file": "off",
      "no-shadow": "off",
      "no-param-reassign": "off",
      "eol-last": "off",
      "import/extensions": [ 1, {
        "js": "always", "json": "always"
      }]
    },
    "ignorePatterns": [
      "dist/",
      "build/"
    ]
  }